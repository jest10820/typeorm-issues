{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    // Needed for TypeORM
    // https://github.com/typeorm/typeorm#typescript-configuration
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "stripInternal": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": false,
    "strictNullChecks": false, // TODO undefiend ~= null
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "target": "es2018"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "k8s",
    "lib"
  ]
}
